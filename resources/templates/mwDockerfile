#  docker-php-ext-install gd

# copy the LocalSettings
COPY LocalSettings.php /var/www/html

# copy the SQL dump
COPY wiki.sql /tmp

# copy the initdb.sh script
COPY initdb.sh /tmp

# make the initdb.sh script executable
RUN chmod +x /tmp/initdb.sh

